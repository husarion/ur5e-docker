<launch>
  <arg name="robot_ip" default="10.15.20.4" />
  <arg name="tf_prefix" default="panther_ur5e_" />
  <arg name="kinematics_config" default="$(find ur_bringup)/config/ur3_calibration.yaml" />
  <arg name="rviz_config" default="$(find ur_bringup)/config/rviz_config.rviz" />
  <arg name="headless_mode" default="true" />
  <arg name="controllers" default="joint_state_controller scaled_pos_joint_traj_controller speed_scaling_state_controller force_torque_sensor_controller" doc="Controllers that are activated by default."/>
  <arg name="stopped_controllers" default="pos_joint_traj_controller joint_group_vel_controller" doc="Controllers that are initally loaded, but not started."/>

  <arg name="use_tool_communication" default="false" />
  <arg name="tool_device_name" default="/dev/ttyTool" />
  <arg name="tool_voltage" default="24" />
  <arg name="tool_baud_rate" default="1000000" />
  <arg name="use_rviz" default="false" />
  
  <include file="$(find ur_robot_driver)/launch/ur3_bringup.launch">
    <arg name="robot_ip" value="$(arg robot_ip)" />
    <arg name="tf_prefix" value="$(arg tf_prefix)" />
    <arg name="controller_config_file" value="$(find ur_bringup)/config/ur5e_controllers.yaml" />
    <arg name="robot_description_file" value="$(find ur5e_moveit_config)/launch/load_ur5e.launch" />
    <arg name="kinematics_config" value="$(arg kinematics_config)" />
    <arg name="use_tool_communication" value="$(arg use_tool_communication)" />
    <arg name="tool_device_name" value="$(arg tool_device_name)" />
    <arg name="tool_voltage" value="$(arg tool_voltage)" />
    <arg name="tool_baud_rate" value="$(arg tool_baud_rate)" />
    <arg name="headless_mode" value="$(arg headless_mode)" />
    <arg name="tool_rx_idle_chars" value="2.0" />
    <arg name="tool_tx_idle_chars" value="4.0" />
  </include>

  <include file="$(find ur3_moveit_config)/launch/move_group.launch" />
  
  <node if="$(arg use_rviz)" name="rviz" pkg="rviz" type="rviz" respawn="false" output="screen" args="-d $(arg rviz_config)" />

</launch>
  